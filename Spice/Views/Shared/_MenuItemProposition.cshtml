@model IEnumerable<MenuItem>
@if (Model.Count() > 0)
{
    <div class="container border border-info row m-3 p-0">
        <div class="col-md-3 col-12">
            <img src="@Model.FirstOrDefault().Image" class="p-3" width="100%" style="border-radius: 5px; border: 1px solid #bbb9bl;" />
        </div>
        <div class="col-md-9 col-12">
            <div class="row">
                <div class="col-8 text-left">
                    <p class="pl-3 text-info  mb-md-0  mt-md-0 pt-md-2" style="font-size:24px">
                        @Model.FirstOrDefault().Name
                        @if (Model.FirstOrDefault().Spicyness.Equals("1"))
                        {
                            <img srcset="/images/mild.png" title="mild" />
                        }
                        @if (Model.FirstOrDefault().Spicyness.Equals("2"))
                        {
                            <img srcset="/images/spicy.png" title="spicy" />
                        }
                        @if (Model.FirstOrDefault().Spicyness.Equals("3"))
                        {
                            <img srcset="/images/verySpicy.png" title="verySpicy" />
                        }
                    </p>
                </div>
                <div class="col-4 text-right pt-2 pr-4">
                    <h3 style="color:saddlebrown;">@Model.FirstOrDefault().Price$</h3>
                </div>
            </div>
            <div class="row col-12 d-none d-md-block">
                @{ /*Jako block będzie widoczny dopiero od MD!*/}
                @Model.FirstOrDefault().Description
            </div>

                <div class="col-md-3 col-12 pb-3 pt-3 pb-mb-0 offset-md-9 text-center">
                    <a asp-action="Details" asp-route-id="@Model.FirstOrDefault().Id" class="btn btn-success form-control">Details</a>
                </div>
        </div>
    </div>
}