@model ComputeViewModel
@{
    ViewData["Title"] = "AddDishProposition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create Category</h2>
<br />

<form method="post" asp-action="Create">
    <div class="border background-search-white">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row pl-4">
            <div class="col-2">
                <label asp-for="@Model.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.Name" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group row pl-4">
            <div class="col-2">
                <label asp-for="@Model.Desc" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.Desc" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Desc" class="text-danger"></span>
        </div>        <div class="form-group row pl-4">
            <div class="col-2">
                <label asp-for="@Model.Value" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.Value" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Value" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <div class="offset-2 col-5">
                <partial name="_CreateAndBackToList" />
            </div>
        </div>
    </div>
</form>